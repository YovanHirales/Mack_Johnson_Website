---
const { title, price, img, alt } = Astro.props;
---

<div class='card bg-transparent w-70 h-100'>
	<figure class='px-10 pt-10'>
		<img src={img} alt={alt} class='rounded-xl' />
	</figure>
	<div class='card-body items-center text-center'>
		<h2 class='font-RockSalt m-1 card-title'>{title}</h2>
		<p>
			${price}
		</p>
		<div class='card-actions'>
			<button role='button'>
				<!-- Add to cart icon -->
				<svg
					xmlns='http://www.w3.org/2000/svg'
					fill='none'
					viewBox='0 0 24 24'
					stroke-width='1.5'
					class='size-6 stroke-current'
				>
					<path
						stroke-linecap='round'
						stroke-linejoin='round'
						d='M12 4.5v15m7.5-7.5h-15'></path>
				</svg>
			</button>
		</div>
	</div>
</div>
