---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import Analytics from '@vercel/analytics/astro';
import SpeedInsights from '@vercel/speed-insights/astro';

const { pathname } = Astro.url;

const hideNavAndFooter = ['/'].includes(pathname);
---

<html lang='en' data-theme='mytheme'>
	<head>
		<meta charset='utf-8' />
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<link rel='preconnect' href='https://fonts.googleapis.com' />
		<link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
		<link
			href='https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Reenie+Beanie&family=Rock+Salt&display=swap'
			rel='stylesheet'
		/>
		<link rel='preload' as='video' href='/hero_video.mp4' />
		<meta name='viewport' content='width=device-width' />
		<meta name='generator' content={Astro.generator} />
		<title>mack johnson</title>
		<Analytics />
		<SpeedInsights />
	</head>
	<body>
		<!-- {!hideNavAndFooter && <Navbar />} -->
		<Navbar />
		<main>
			<slot />
		</main>
		{!hideNavAndFooter && <Footer />}
	</body>
</html>
